<h1>Listing comments</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Autor</th>
    <th>Articulo</th>
    <th>Critica</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.body %></td>
    <td><%= comment.autor %></td>
    <td><%= comment.articulo_id %></td>
    <td><%= comment.critica_id %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><% if admin_signed_in? %><%= link_to 'Destroy', comment, :method => :delete, :confirm => "Are you sure?" %></td>
  </tr>
<% end %>
</table>

